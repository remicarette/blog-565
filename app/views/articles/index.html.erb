
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= cl_image_tag 'amsjywjychfa9xftsqiq', width: 1200, height: 400, crop: :fill %>
      <%= cl_image_tag 'xgfs8fs8nds0ihijmjcm', width: 150, height: 150, crop: :thumb, gravity: :face %>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.body %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path %>

</div>
