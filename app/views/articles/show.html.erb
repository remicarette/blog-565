<div class="container">
  <p id="notice"><%= notice %></p>


  <%= cl_image_tag @article.photo.key, width: 1200, height: 400, crop: :fit %>

  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @article.body %>
  </p>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
</div>
